@inherits System.Web.Mvc.WebViewPage
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Titulo</title>
    <link href="@Url.Content("~/Content/layout_1/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>

<body>
    <div id="wrapper">
        <div id="header">
            <div id="logoHeader">
                Nombre del grupo
            </div>
            <div id="login">
                <ul>
                    <li>                        
                        <a href="@Url.Action("Login","Account")">Acceder</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Registro","Account")">Registrarme</a>
                    </li>
                </ul>
            </div>
        </div>

        <div id="menu">
            <ul>    
                <li class="selected"><a href="@Url.Action("Index","Home")">Inicio</a></li>
                <li><a href="#">Notificaciones</a></li>
                <li><a href="#">Chat</a></li>
                <li><a href="#">Ayuda</a></li>
            </ul>
        </div>

        <div id="page">
            <div id="content">
                @RenderBody()
            </div>    
            
            <div style="clear:both"></div>        
        </div>

    </div>
    
    <div id="footer">
        <p>
            Layout numero 1 para el front office
        </p>
    </div>
</body>
</html>
