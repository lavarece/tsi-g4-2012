				</LinearGradientBrush>
			</Button.Background>
		</Button>
		<Button x:Name="boton_gestionUsu" Content="Gestión de Usuarios" Grid.Column="1" Height="28" Margin="22.129,0,17.089,140" VerticalAlignment="Bottom" Click="boton_gestionUsu_Click">
