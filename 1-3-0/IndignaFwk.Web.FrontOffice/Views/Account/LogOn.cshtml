@model IndignaFwk.Web.FrontOffice.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
    Layout = "~/Content/freeradicals/layout.cshtml";
}

<h2>Log On</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Cuenta de Usuario</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Correo)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Correo)
                @Html.ValidationMessageFor(m => m.Correo)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Contraseña)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Contraseña)
                @Html.ValidationMessageFor(m => m.Contraseña)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.Recordarme)
                @Html.LabelFor(m => m.Recordarme)
            </div>

            <p>
                <input type="submit" value="Log On" />
            </p>
        </fieldset>
    </div>
    <p>
    Haz click en el siguente link para registrarte: @Html.ActionLink("Register", "Register")
    </p>
}
