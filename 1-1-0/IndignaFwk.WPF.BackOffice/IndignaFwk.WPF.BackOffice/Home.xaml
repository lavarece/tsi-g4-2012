				<DropShadowEffect/>
			</Button.Effect>
			<Button.Background>
				<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
					<GradientStop Color="Black" Offset="1"/>
					<GradientStop Color="#FF00FFF9" Offset="0.8"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>
		<Button x:Name="boton_gestionGrupos" Content="Gestión de Grupos" Grid.Column="1" Margin="22.129,0,17.089,104" Click="boton_gestionGrupo_Click" Height="28" VerticalAlignment="Bottom">
