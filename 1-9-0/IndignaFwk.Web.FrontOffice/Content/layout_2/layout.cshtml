@inherits System.Web.Mvc.WebViewPage
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Titulo</title>
    
    <link href="@Url.Content("~/Content/layout_2/css/" + @ViewBag.GrupoSite.Tematica.NombreCSS + ".css")" rel="stylesheet" type="text/css" />    

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="wrapper">
        <div id="header">
            <div id="logo">
                Nombre Grupo
            </div>
            <div id="login">
                <ul>
                    <li>
                        <a href="@Url.Action("Index","Home")">Home</a>
                    </li>
                    <li>                        
                        <a href="@Url.Action("Login","Account")">Acceder</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Registro","Account")">Registrarme</a>
                    </li>
                </ul>
            </div>
        </div>

        <div id="page">
            <div id="content">
                @RenderBody()
            </div>
            	<!-- end #content -->
	<div id="sidebar">
		<div id="sidebar-bgtop"></div>
		<div id="sidebar-content">
			<div id="sidebar-bgbtm">
			<ul>
				<li id="search">
					<h2>Buscar:</h2>
					<form method="get" action="">
						<fieldset>
						<input type="text" id="s" name="s" value="" />
						<input type="submit" id="x" value="Search" />
						</fieldset>
					</form>
				</li>
                <li>
					<h2>Contenido:</h2>
					<ul>
						<li><a href="@Url.Action("Compartir", "Contenido")"><font color="Yellow">Compartir</font></a></li>
					</ul>
				</li>
				<li>
					<h2>Convocatorias:</h2>
					<ul>
						<li><a href="@Url.Action("Crear", "Convocatoria")"><font color="Yellow">Crear</font></a></li>
						<li><a href="@Url.Action("Listado", "Convocatoria")"><font color="Yellow">Listar</font></a></li>
                    </ul>
				</li>
				<li>
					<h2>Chat:</h2>
					<ul>
						<li><a href="@Url.Action("SalaGrupo","Chat")"><font color="Yellow">Abrir Chat</font></a></li>
					</ul>
				</li>
				<li>
					<h2>Ranking Convocatorias:</h2>
					<ul>
						<li><a href="#"><font color="Yellow">Ranking1</font></a></li>
						<li><a href="#"><font color="Yellow">Ranking2</font></a></li>
						<li><a href="#"><font color="Yellow">Ranking3</font></a></li>
					</ul>
				</li>
			</ul>
		</div>
		</div>
	</div>    
	<!-- end #sidebar -->
            
            <div style="clear:both"></div>        
        </div>

    </div>
    
    <div id="footer">
        <p>
            Layout numero 2 para el front office
        </p>
    </div>
</body>
</html>