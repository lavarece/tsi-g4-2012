				<DropShadowEffect/>
			</Rectangle.Effect>
		</Rectangle>
		<Button x:Name="boton_gestionAdmin" Content="Gestión de Administradores" Grid.Column="1" Height="28" Margin="22.129,139,17.089,0" VerticalAlignment="Top" Click="boton_gestionAdmin_Click">
