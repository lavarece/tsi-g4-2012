			<RowDefinition Height="343.876"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="17.871"/>
			<ColumnDefinition Width="214.218"/>
			<ColumnDefinition Width="214.154"/>
			<ColumnDefinition Width="17.757"/>
		</Grid.ColumnDefinitions>
		<Rectangle Grid.Column="1" Margin="9.129,116,5.089,11" Stroke="#FF00FFF9">
