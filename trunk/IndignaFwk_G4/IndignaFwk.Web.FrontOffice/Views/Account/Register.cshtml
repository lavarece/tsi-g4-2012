@model IndignaFwk.Web.FrontOffice.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Content/freeradicals/layout.cshtml";
}

<h2>Log On</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "No se registro correctamente.Por favor, intentelo nuevamente.")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Registrarse</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Nombre)
            </div>

            <div class="editor-field">
                @Html.TextBoxFor(m => m.Nombre)
                @Html.ValidationMessageFor(m => m.Nombre)
            </div>
            
            <br/>
            
            <div class="editor-label">
                @Html.LabelFor(m => m.Descripcion)
            </div>
            
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Descripcion, new { style = "width:150px" })
            </div>

            <br/>
            
            <div class="editor-label">
                @Html.LabelFor(m=>m.RegionGeografica)
            </div>
    
            @* to do.. va un array list con opciones de region geografica<div class="editor-label">
                @Html.ListBox<>
            </div>*@

            <br/>

            <div class="editor-label">
                @Html.LabelFor(m => m.Correo)
            </div>

            <div class="editor-field">
                @Html.TextBoxFor(m => m.Correo)
                @Html.ValidationMessageFor(m => m.Correo)
            </div>
            
            <br/>

            <div class="editor-label">
                @Html.LabelFor(m => m.Contraseña)
            </div>
    
            <div class="editor-field">
                @Html.PasswordFor(m => m.Contraseña)
                @Html.ValidationMessageFor(m => m.Contraseña)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmarContraseña)
            </div>

            <div class="editor-label">
                @Html.PasswordFor(m => m.ConfirmarContraseña)
                @Html.ValidationMessageFor(m => m.ConfirmarContraseña)
            </div>

            <br/>

            <div class="editor-label">
                @Html.LabelFor(m => m.PreguntaSecreta)
            </div>

            @*to do va un array list con opciones de pregunta secreta*@
            
            <div class="editor-label">
                @Html.TextBoxFor(m => m.PreguntaSecreta)
            </div>

            <p>
                <input type="submit" value="Register" />
            </p>
        </fieldset>
    </div>
}
@using (Html.BeginForm()){
    <p></p>    
    <div>
    <fieldset>
            <legend>Registrarse con facebook</legend>
            <div class="editor-label">
                @Html.LabelFor(m => m.CorreoFacebook)
            </div>

            <div class="editor-label">
                @Html.PasswordFor(m => m.CorreoFacebook)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ContraseñaFacebook)
            </div>

            <div class="editor-label">
                @Html.PasswordFor(m => m.ContraseñaFacebook)
            </div>
            <p>
                <input type="submit" value="Register" />
            </p>
    </fieldset>

    </div>
    
    }

