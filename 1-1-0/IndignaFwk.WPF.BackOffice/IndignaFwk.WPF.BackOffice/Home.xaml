				<DropShadowEffect/>
			</Button.Effect>
			<Button.Background>
				<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
					<GradientStop Color="Black" Offset="1"/>
					<GradientStop Color="#FF00FFF9" Offset="0.8"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>
		<Button x:Name="boton_gestionVar" Content="Gestión de Variables" Grid.Column="1" Height="28" Margin="22.129,0,17.089,68" VerticalAlignment="Bottom" Click="boton_gestionVar_Click">
			<Button.Effect>
				<DropShadowEffect/>
			</Button.Effect>
			<Button.Background>
				<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
					<GradientStop Color="Black" Offset="1"/>
					<GradientStop Color="#FF00FFF9" Offset="0.8"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>
		<Button x:Name="boton_gestionRep" Content="Gestión de Reportes" Grid.Column="1" Height="28" Margin="22.129,0,17.089,32" VerticalAlignment="Bottom" Click="boton_gestionRep_Click">
			<Button.Effect>
				<DropShadowEffect/>
			</Button.Effect>
			<Button.Background>
				<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
					<GradientStop Color="#FF00FFF9" Offset="0.8"/>
					<GradientStop Color="Black" Offset="1"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>
		<Label x:Name="label_bienvenido" Content="Bienvenido, " Grid.Column="1" Height="53" Margin="10.129,58,4.089,0" VerticalAlignment="Top" Foreground="#FF00FFF9">
			<Label.Effect>
				<DropShadowEffect/>
			</Label.Effect>
		</Label>
		<Label Content="&quot;I have a dream...&quot;&#xd;&#xa;&#x9;&#x9;Martin Luther King" Grid.Column="2" Height="61" Margin="18.911,104,0,0" VerticalAlignment="Top" Foreground="#FF00FFF9" FontStyle="Italic" Grid.ColumnSpan="2">
			<Label.Effect>
				<DropShadowEffect/>
			</Label.Effect>
		</Label>
		<Label Content="Cerrar Sesión" Grid.Column="2" Height="29" Margin="0,1,-2.757,0" VerticalAlignment="Top" Foreground="#FF00FFF9" HorizontalAlignment="Right" Width="91">
