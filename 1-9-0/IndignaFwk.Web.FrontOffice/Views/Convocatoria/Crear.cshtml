@model IndignaFwk.Web.FrontOffice.Models.ConvocatoriaModel 

@{
    ViewBag.Title = ViewBag.GrupoSite.Nombre + "- Convocatorias";
    Layout = "~/Content/" + ViewBag.GrupoSite.Layout.NombreLayout + "/layout.cshtml";
 }

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "La convocatoria no es válida, intente nuevamente.")

<h2>Crear convocatoria</h2>

@using (Html.BeginForm(null, "Convocatoria", FormMethod.Post, new { @id = "formCrearConvocatoria" })) 
{
    <div class="areaFormulario">    
        <table>
            <tr>    
                <td>
                     <div class="fieldLabel">
                        @Html.LabelFor(m => m.Titulo)
                    </div>
                    <div class="fieldValue">
                        @Html.TextBoxFor(m => m.Titulo)
                        @Html.ValidationMessageFor(m => m.Titulo)
                    </div>
                </td>
                <td>
                    <div class="fieldLabel">
                        @Html.LabelFor(m => m.LogoUrl)
                    </div>
                    <div class="fieldValue">
                        @Html.TextBoxFor(m => m.LogoUrl)
                        @Html.ValidationMessageFor(m => m.LogoUrl)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="fieldLabel">
                        @Html.LabelFor(m => m.Descripcion)
                    </div>            
                    <div class="fieldValue">
                        @Html.TextAreaFor(m => m.Descripcion)
                        @Html.ValidationMessageFor(m => m.Descripcion)
                    </div>
                </td>
                <td>
                    <div class="fieldLabel">
                        @Html.LabelFor(m => m.Quorum)
                    </div>    
                    <div class="fieldValue">
                        @Html.TextBoxFor(m => m.Quorum)
                        @Html.ValidationMessageFor(m => m.Quorum)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="fieldLabel">
                        @Html.LabelFor(m => m.FechaInicio)
                    </div>
                    <div class="fieldValue">
                        @Html.TextBoxFor(m => m.FechaInicio, new { id = "fechaInicioConvocatoria" })
                        @Html.ValidationMessageFor(m => m.FechaInicio)
                    </div>
                </td>
                <td>
                    <div class="fieldLabel">
                        @Html.LabelFor(m => m.FechaFin)
                    </div>
                    <div class="fieldValue">
                        @Html.TextBoxFor(m => m.FechaFin, new { id = "fechaFinConvocatoria" })
                        @Html.ValidationMessageFor(m => m.FechaFin)
                    </div>
                </td>                
            </tr>
            <tr>
                <td>
                    <div class="fieldLabel">
                        @Html.LabelFor(m => m.Coordenadas)
                    </div>    
                    <div class="fieldValue">
                        @Html.TextBoxFor(m => m.Coordenadas, new { @id = "txtCoordenadasConvocatoria", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.Coordenadas)                        
                    </div>                                        
                </td>
                <td>
                </td>
            </tr>
        </table>   
    </div>
    
    <div class="areaBotones">
        <ul>            
            <li>
                <div class="boton">
                    <a href="#" onclick="submitForm('Crear');">Crear</a>
                </div>       
            </li>
            <li>
                <div class="boton">
                    <a href="@Url.Action("Listado", "Convocatoria")">Volver</a>
                </div>       
            </li>
        </ul>        
    </div>            
}

<script type="text/javascript">

    $(function () {
        $("#fechaInicioConvocatoria").datepicker();
        $("#fechaFinConvocatoria").datepicker();

        $('#txtCoordenadasConvocatoria').click(function () {
            showMapaSelector('txtCoordenadasConvocatoria');
        });
    });

    function submitForm(method) {
        $("#formCrearConvocatoria")[0].action = '' + method;
        $("#formCrearConvocatoria")[0].submit();
    }

</script>