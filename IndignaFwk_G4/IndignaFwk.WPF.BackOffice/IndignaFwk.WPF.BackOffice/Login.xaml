<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="IndignaFwk_WPF_BackOffice.Login"
	x:Name="Window"
	Title="Login"
	Width="619" Height="468">

	<Grid x:Name="LayoutRoot" Background="#FF1B1B1B">
		<TextBox x:Name="textBox_Usuario" HorizontalAlignment="Left" Height="32" Margin="29,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" >
			<TextBox.Effect>
				<DropShadowEffect/>
			</TextBox.Effect>
		</TextBox>
		<PasswordBox x:Name="textBox_Password" HorizontalAlignment="Left" Height="33" Margin="29,76,0,0" VerticalAlignment="Top" Width="210" >
			<PasswordBox.Effect>
				<DropShadowEffect/>
			</PasswordBox.Effect>
		</PasswordBox>
		<Button x:Name="boton_Login" Content="" HorizontalAlignment="Left" Height="31" Margin="113,133,0,0" VerticalAlignment="Top" Width="125" Click="botonLogin_Click" >
			<Button.Effect>
				<DropShadowEffect/>
			</Button.Effect>
		</Button>
	</Grid>
</Window>