@model IndignaFwk.Web.FrontOffice.Models.EditarPerfilModel 

@using IndignaFwk.Web.FrontOffice.Models;

@{
    ViewBag.Title = @ViewBag.GrupoSite.Nombre + "- Registro";
    Layout = "~/Content/" + ViewBag.GrupoSite.Layout.NombreLayout + "/layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Los datos no son es válidos, intente nuevamente.")

<h3>Edición de perfil</h3>

@using (Html.BeginForm(null, "Account", FormMethod.Post, new { @id = "formEdicionPerfil" }))
{
    <div class="areaFormulario">    
        <table>
            <tr>    
                <td>
                     <div class="fieldLabel">
                        @Html.LabelFor(m => m.Nombre)
                    </div>
                    <div class="fieldValue">
                        @Html.TextBoxFor(m => m.Nombre)
                        @Html.ValidationMessageFor(m => m.Nombre)
                    </div>
                </td>
                <td>
                     <div class="fieldLabel">
                        @Html.LabelFor(m => m.Apellido)
                    </div>
                    <div class="fieldValue">
                        @Html.TextBoxFor(m => m.Apellido)
                        @Html.ValidationMessageFor(m => m.Apellido)
                    </div>
                </td>
            </tr>            
            <tr>                
                <td>
                    <div class="fieldLabel">
                        @Html.LabelFor(m => m.Descripcion)
                    </div>            
                    <div class="fieldValue">
                        @Html.TextAreaFor(m => m.Descripcion)
                        @Html.ValidationMessageFor(m => m.Descripcion)
                    </div>
                </td>
                <td></td>                
            </tr>           
            <tr>
                <td>
                    <div class="fieldLabel">
                        @Html.LabelFor(m => m.PreguntaSecreta)
                    </div>
                    <div class="fieldValue">
                        @Html.DropDownListFor(m => m.PreguntaSecreta, new SelectList(ViewBag.ListadoPreguntasSecretas, "Valor", "Valor"), "---")
                        @Html.ValidationMessageFor(m => m.PreguntaSecreta)
                    </div>
                </td>
                <td>
                    <div class="fieldLabel">
                        @Html.LabelFor(m => m.RespuestaSecreta)
                    </div>
                    <div class="fieldValue">
                        @Html.TextBoxFor(m => m.RespuestaSecreta)
                        @Html.ValidationMessageFor(m => m.RespuestaSecreta)
                    </div>
                </td>
            </tr>                                  
        </table>   
    </div>
    
    @Html.Partial("CambioContrasenia", new CambioContraseniaModel())
                                    
    <div class="areaBotones">
        <ul>
            <li>
                <div class="boton">
                    <a href="#" onclick="cambioContrasenia()">Cambiar contraseña</a>
                </div>       
            </li>
            <li>
                <div class="boton">
                    <a href="#" onclick="submitForm('Registro');">Finalizar</a>
                </div>       
            </li>
        </ul>        
    </div>              
}

<script type="text/javascript">

    function submitForm(method) {
        $("#formRegistro")[0].action = '' + method;
        $("#formRegistro")[0].submit();
    }

    function cambioContrasenia() 
    {
        $("#divCambioContrasenia").dialog({
            resizable: false,
            modal: true
        });
    }

</script>
