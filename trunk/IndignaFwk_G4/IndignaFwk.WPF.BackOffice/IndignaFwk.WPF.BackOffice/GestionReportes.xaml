<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="IndignaFwk_WPF_BackOffice.GestionReportes"
	x:Name="Window"
	Title="GestionReportes"
	Width="426" Height="176">

	<Grid x:Name="LayoutRoot" Background="#FF1B1B1B">
		<Grid.RowDefinitions>
			<RowDefinition Height="131.999"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Label Content="Gestión de Reportes" Height="39" Margin="87,2,-84,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei" Foreground="#FF00FFF9" FontSize="24">
			<Label.Effect>
				<DropShadowEffect/>
			</Label.Effect>
		</Label>
		<ListBox x:Name="listbox_tipoReporte" Margin="19,51,17,0" Height="37" VerticalAlignment="Top">
			<ListBoxItem x:Name="listboxItem_registroTiempo" Content="Reporte de Registros en el Tiempo"/>
			<ListBoxItem x:Name="listboxItem_contenidoInadecuado" Content="Reporte de Contenido Inadecuado"/>
		</ListBox>
		<Button x:Name="boton_generarReporte" Content="Generar Reporte" HorizontalAlignment="Right" Height="25" Margin="0,0,15,5" VerticalAlignment="Bottom" Width="139">
			<Button.Background>
				<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
					<GradientStop Color="#FF00FFF9" Offset="0.8"/>
					<GradientStop Color="Black" Offset="1"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>
	</Grid>
</Window>